<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/detail_layout_marginTop"
        android:layout_marginBottom="@dimen/detail_layout_marginBottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_item_marginBottom"
            android:background="@drawable/round_rectangle_bg"
            android:orientation="horizontal"
            android:paddingStart="@dimen/detail_item_paddingStart"
            android:paddingTop="@dimen/detail_item_paddingTop"
            android:paddingEnd="@dimen/detail_item_paddingEnd"
            android:paddingBottom="@dimen/detail_item_paddingBottom">

            <TextView
                android:id="@+id/detail_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_title_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_item_marginBottom"
            android:background="@drawable/round_rectangle_bg"
            android:orientation="horizontal"
            android:paddingStart="@dimen/detail_item_paddingStart"
            android:paddingTop="@dimen/detail_item_paddingTop"
            android:paddingEnd="@dimen/detail_item_paddingEnd"
            android:paddingBottom="@dimen/detail_item_paddingBottom">

            <TextView
                android:id="@+id/detail_content_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_content_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detail_photo_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>